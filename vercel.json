{
    "functions": {
        "api/index.ts": {
            "includeFiles": "server/**/*.ts,shared/**/*.ts,drizzle/**/*.ts"
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "framework": "vite"
}