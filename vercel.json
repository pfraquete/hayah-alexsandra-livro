{
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "buildCommand": "npm run build",
    "outputDirectory": "dist/public",
    "framework": "vite",
    "functions": {
        "api/index.js": {
            "includeFiles": "server/**"
        }
    }
}